#! /bin/sh

set -euo pipefail

GRAY="\x1b[90m"
BLUE="\x1b[34m"
RED="\x1b[31m"
BLACK="\x1b[30m"
GREEN="\x1b[32m"
YELLOW="\x1b[33m"
MAGENTA="\x1b[35m"
RESET="\x1b[0m"

print() {
    TEXT=$1
    COMMAND=$2

    printf "${GRAY} ${TEXT}:$RESET\n"
    printf "\t${YELLOW}${COMMAND};$RESET\n"
    printf "\n"
}

print 'Delete all node_modules recursivly in the current folder' \
        'find . -type d -name node_modules -prune -print -exec rm -rf {} \'

print 'Get size of the current folder' \
        'du -h --max-depth=1 | sort -hr'
